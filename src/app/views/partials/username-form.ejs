<div id="login">
    <div id="username-display">
        <p><a href="#username-form">Change name</a> <span class="username"><%= username %></span><i class="icon-user default"></i></p>
    </div>

    <form id="username-form">
      <fieldset>
        <legend class="visuallyhidden">Update your username</legend>
        <label for="username">Set a new username</label>
        <input type="text" id="username" name="username" value="<%= username %>" required />

        <input type="hidden" readonly id="userid" name="userid" value="<%= userid %>" />
        <input type="hidden" readonly id="cid"    name="cid"    value="<%= cid %>" />
        <input type="hidden" readonly id="id"     name="id"     value="<%= id %>" />
        <input type="submit" value="Go" />
      </fieldset>
    </form>
</div>